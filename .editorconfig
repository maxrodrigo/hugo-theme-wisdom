# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.{html,js}]
indent_size = 4

[*.md]
indent_size = 2

[Makefile]
indent_style = tab
